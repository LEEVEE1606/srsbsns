{% extends 'admin/base.html.twig' %}

{% block body %}
<!-- ======= Header ======= -->
<header id="header" class="header fixed-top d-flex align-items-center">
    <div class="d-flex align-items-center justify-content-between">
        <a href="{{ path('admin_dashboard') }}" class="logo d-flex align-items-center">
            <img src="{{ asset('NiceAdmin/assets/img/logo.png') }}" alt="">
            <span class="d-none d-lg-block">SRSBSNS Admin</span>
        </a>
        <i class="bi bi-list toggle-sidebar-btn"></i>
    </div>

    <nav class="header-nav ms-auto">
        <ul class="d-flex align-items-center">
            <li class="nav-item dropdown">
                <a class="nav-link nav-icon" href="#" data-bs-toggle="dropdown">
                    <i class="bi bi-bell"></i>
                    <span class="badge bg-primary badge-number">4</span>
                </a>
                <ul class="dropdown-menu dropdown-menu-end dropdown-menu-arrow notifications">
                    <li class="dropdown-header">
                        You have 4 new notifications
                        <a href="#"><span class="badge rounded-pill bg-primary p-2 ms-2">View all</span></a>
                    </li>
                </ul>
            </li>

            <li class="nav-item dropdown pe-3">
                <a class="nav-link nav-profile d-flex align-items-center pe-0" href="#" data-bs-toggle="dropdown">
                    <img src="{{ asset('NiceAdmin/assets/img/profile-img.jpg') }}" alt="Profile" class="rounded-circle">
                    <span class="d-none d-md-block dropdown-toggle ps-2">{{ app.user ? app.user.userIdentifier : 'Admin' }}</span>
                </a>
                <ul class="dropdown-menu dropdown-menu-end dropdown-menu-arrow profile">
                    <li class="dropdown-header">
                        <h6>{{ app.user ? app.user.userIdentifier : 'Admin' }}</h6>
                        <span>Administrator</span>
                    </li>
                    <li><hr class="dropdown-divider"></li>
                    <li>
                        <a class="dropdown-item d-flex align-items-center" href="{{ path('app_home') }}">
                            <i class="bi bi-house"></i>
                            <span>Main Site</span>
                        </a>
                    </li>
                    <li><hr class="dropdown-divider"></li>
                    <li>
                        <a class="dropdown-item d-flex align-items-center" href="{{ path('admin_logout') }}">
                            <i class="bi bi-box-arrow-right"></i>
                            <span>Sign Out</span>
                        </a>
                    </li>
                </ul>
            </li>
        </ul>
    </nav>
</header>

<!-- ======= Sidebar ======= -->
<aside id="sidebar" class="sidebar">
    <ul class="sidebar-nav" id="sidebar-nav">
        <li class="nav-item">
            <a class="nav-link {{ app.request.get('_route') starts with 'admin_dashboard' ? '' : 'collapsed' }}" href="{{ path('admin_dashboard') }}">
                <i class="bi bi-grid"></i>
                <span>Dashboard</span>
            </a>
        </li>

        <li class="nav-item">
            <a class="nav-link {{ app.request.get('_route') starts with 'admin_contacts' ? '' : 'collapsed' }}" href="{{ path('admin_contacts') }}">
                <i class="bi bi-envelope"></i>
                <span>Contacts</span>
            </a>
        </li>

        <li class="nav-item">
            <a class="nav-link {{ app.request.get('_route') starts with 'admin_settings' ? '' : 'collapsed' }}" href="{{ path('admin_settings') }}">
                <i class="bi bi-gear"></i>
                <span>Settings</span>
            </a>
        </li>

        <li class="nav-item">
            <a class="nav-link {{ app.request.get('_route') starts with 'admin_users' or app.request.get('_route') starts with 'admin_user' ? '' : 'collapsed' }}" href="{{ path('admin_users') }}">
                <i class="bi bi-people"></i>
                <span>User Management</span>
            </a>
        </li>

        <li class="nav-item">
            <a class="nav-link {{ app.request.get('_route') starts with 'admin_api' ? '' : 'collapsed' }}" href="{{ path('admin_api_setup') }}">
                <i class="bi bi-code-slash"></i>
                <span>API Setup</span>
            </a>
        </li>

        <li class="nav-heading">External Links</li>

        <li class="nav-item">
            <a class="nav-link collapsed" href="{{ path('app_home') }}">
                <i class="bi bi-house"></i>
                <span>Main Website</span>
            </a>
        </li>

        <li class="nav-item">
            <a class="nav-link collapsed" href="/srsbsns/public/api" target="_blank">
                <i class="bi bi-question-circle"></i>
                <span>API Platform</span>
            </a>
        </li>
    </ul>
</aside>

<!-- ======= Main ======= -->
<main id="main" class="main">
    {% for type, messages in app.flashes %}
        {% for message in messages %}
            <div class="alert alert-{{ type == 'error' ? 'danger' : type }} alert-dismissible fade show" role="alert">
                {{ message }}
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        {% endfor %}
    {% endfor %}

    {% block main_content %}{% endblock %}
</main>

<!-- ======= Footer ======= -->
<footer id="footer" class="footer">
    <div class="copyright">
        &copy; Copyright <strong><span>SRSBSNS</span></strong>. All Rights Reserved
    </div>
    <div class="credits">
        Designed by Lee van Rensburg
    </div>
</footer>

<a href="#" class="back-to-top d-flex align-items-center justify-content-center"><i class="bi bi-arrow-up-short"></i></a>
{% endblock %} 